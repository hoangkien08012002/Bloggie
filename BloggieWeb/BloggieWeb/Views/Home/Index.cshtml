@model List<BloggieWeb.Models.Domain.BlogPost>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <dv class="row align-items-center g-5 py-5"> 
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Bloggie - The Dev Blog
            </h1>
            <p class="lead">
                Bloggie is the gome to coding bloga covering a vast range 
                of topics like HTML,CSS,Js, ASP .Net, C#, Angular etc.
                Want to read the lastest dev articles? Join the Bloggie App and
                get weekly blogs in your email
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/57690/pexels-photo-57690.jpeg?auto=compress&cs=tinysrgb&w=600" 
            alt="Bloggie - Dev BLog"
                 class="d-block mx-lg-auto img-fluid" width="300px" />
        </div>
    </dv>

</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if(Model!=null && Model.Any())
            {
                @foreach(var blogPost in Model)
                {
                    <div class="mb-5 bg-light box-shadow p-5">
                        <img src="@blogPost.FearturedImageUrl" alt="@blogPost.Heading"
                        class="mb-2 d-block img-fluid"/>

                        <h2 class="mb-4">@blogPost.Heading</h2>
                        <p class="mb-4">
                            Author : @blogPost.Author
                            <br/>
                            Publish Date : @blogPost.PublishedDate.ToShortDateString()
                        </p>

                        <p class="mb-4">
                            @foreach (var tag in blogPost.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                        </p>

                        <p class="mb-4"> @blogPost.ShortDescription</p>

                        <a class="btn btn-dark" href="">Read mmore</a>
                    </div>
                }
            }

        </div>
    </div>
</div>